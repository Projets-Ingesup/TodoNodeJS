extends ../layout

block content
    h1 Edition de #{user.pseudo}

    form(action=action method='post')#edit-table
        table
        tr
          th Pseudo
          td
          input(type ="text" name='pseudo' value=user.pseudo placeholder="Pseudo" required)
        tr
          th Prénom
          td
          input(type ="text" name='firstname' value=user.firstname placeholder="Prénom" required)
        tr
          th Email
          td
          input(type ="email" name='email' value=user.email placeholder="Email" required)

        input(type='password' name='password' value=user.password hidden required)

        input(type='submit', value='Envoyer')
